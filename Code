print(f"Quiz Completed! You scored {score} out of 10 point(s) 🏆")
percentage = (score/10)*100
print(f"That's a score of {percentage:.1f}%!")


if percentage <= 33:
    print("🌱 Keep Growing! 🚀")
    print(f"Your performance is Below Average 🌟 ")
elif 33 <= percentage < 55:
    print("🎯 On the Right Track! 👏")
    print(f"Your performance is Average 👍")
elif 55 <= percentage < 75:
    print("🔥 Great job! 💪")
    print(f"Your performance is Good 🏅")
else:
    print("🚀 Exceptional Work! 🚀")
    print(f"Your performance is Best 🏆")
